<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Add a new tag <%= @plant.name %></h1>

      <%= simple_form_for([@plant, @plant_tag]) do |f| %>
        <%= f.association :tag %>
        <%= f.submit "Add a tag", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
